{% extends 'base.html.twig' %}

{% block title %}MyObject index{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>MyObject index</h1>
    <a href="{{ path('app_back_my_object_new') }}"class="btn btn-success float-end">Create new</a>

    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Image</th>
                <th>Description</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for my_object in my_objects %}
            <tr>
                <td>{{ my_object.id }}</td>
                <td>{{ my_object.name }}</td>
                <td>{{ my_object.title }}</td>
                <td>{{ my_object.image }}</td>
                <td>{{ my_object.description|slice(0, 50) }}...</td>
                <td>{{ my_object.state }}</td>
                <td>
                    <a href="{{ path('app_back_my_object_show', {'id': my_object.id}) }}"class="btn btn-sm btn-info">show</a>
                    <a href="{{ path('app_back_my_object_edit', {'id': my_object.id}) }}"class="btn btn-sm btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</div>
{% endblock %}
